<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.ecohabit.controller.TipsController">
   <top>
      <!-- Header Section -->
      <VBox styleClass="header-section">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Today's Tip Section -->
         <VBox styleClass="tip-of-day-container" spacing="15.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <Label fx:id="todaysTipLabel" styleClass="tip-of-day-header" text="💡 Today's Eco Tip">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>
               
               <Region HBox.hgrow="ALWAYS" />
               
               <HBox spacing="10.0">
                  <Button fx:id="refreshTipBtn" styleClass="tip-action-btn" text="🔄 New Tip" />
                  <Button fx:id="favoriteTipBtn" styleClass="tip-action-btn" text="🤍 Favorite" />
                  <Button fx:id="shareTipBtn" styleClass="tip-action-btn" text="📤 Share" />
               </HBox>
            </HBox>
            
            <Label fx:id="tipOfDayContent" styleClass="tip-of-day-content" text="Loading today's eco tip..." wrapText="true">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </VBox>
         
         <!-- Search and Filter Section -->
         <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-section">
            <padding>
               <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            
            <!-- Search -->
            <VBox spacing="5.0">
               <Label styleClass="filter-label" text="Search Tips:" />
               <HBox spacing="5.0">
                  <TextField fx:id="searchField" prefWidth="200.0" promptText="Search tips..." />
                  <Button fx:id="searchBtn" styleClass="search-btn" text="🔍" />
               </HBox>
            </VBox>
            
            <!-- Category Filter -->
            <VBox spacing="5.0">
               <Label styleClass="filter-label" text="Category:" />
               <ComboBox fx:id="categoryFilterComboBox" prefWidth="150.0" />
            </VBox>
            
            <!-- Difficulty Filter -->
            <VBox spacing="5.0">
               <Label styleClass="filter-label" text="Difficulty:" />
               <ComboBox fx:id="difficultyFilterComboBox" prefWidth="120.0" />
            </VBox>
            
            <!-- Sort By -->
            <VBox spacing="5.0">
               <Label styleClass="filter-label" text="Sort by:" />
               <ComboBox fx:id="sortByComboBox" prefWidth="120.0" />
            </VBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Filter Actions -->
            <VBox alignment="BOTTOM_RIGHT" spacing="5.0">
               <Label styleClass="filter-label" text="Actions:" />
               <HBox spacing="10.0">
                  <Button fx:id="applyFiltersBtn" styleClass="filter-btn-primary" text="Apply Filters" />
                  <Button fx:id="clearFiltersBtn" styleClass="filter-btn-secondary" text="Clear" />
               </HBox>
            </VBox>
         </HBox>
      </VBox>
   </top>
   
   <left>
      <!-- Sidebar -->
      <VBox prefWidth="250.0" styleClass="sidebar">
         <padding>
            <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
         </padding>
         
         <!-- Quick Categories -->
         <VBox fx:id="quickCategoriesContainer" spacing="10.0" styleClass="quick-categories">
            <Label styleClass="sidebar-header" text="Quick Categories">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <Button fx:id="allTipsBtn" styleClass="category-btn" text="📋 All Tips" />
            <Button fx:id="energyTipsBtn" styleClass="category-btn" text="⚡ Energy" />
            <Button fx:id="transportTipsBtn" styleClass="category-btn" text="🚌 Transportation" />
            <Button fx:id="foodTipsBtn" styleClass="category-btn" text="🍃 Food" />
            <Button fx:id="wasteTipsBtn" styleClass="category-btn" text="♻️ Waste" />
            <Button fx:id="waterTipsBtn" styleClass="category-btn" text="💧 Water" />
            <Button fx:id="homeTipsBtn" styleClass="category-btn" text="🏠 Home" />
         </VBox>
         
         <Separator />
         
         <!-- Statistics -->
         <VBox spacing="15.0" styleClass="statistics-section">
            <padding>
               <Insets top="20.0" />
            </padding>
            
            <Label styleClass="sidebar-header" text="Statistics">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            
            <VBox spacing="10.0">
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label styleClass="stat-label" text="Total Tips:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="totalTipsLabel" styleClass="stat-value" text="0" />
               </HBox>
               
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label styleClass="stat-label" text="Read Tips:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="readTipsLabel" styleClass="stat-value" text="0" />
               </HBox>
               
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label styleClass="stat-label" text="Favorites:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="favoriteTipsLabel" styleClass="stat-value" text="0" />
               </HBox>
               
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label styleClass="stat-label" text="Daily Streak:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="streakLabel" styleClass="stat-value" text="0 days" />
               </HBox>
            </VBox>
         </VBox>
         
         <Separator />
         
         <!-- Personal Recommendations -->
         <VBox spacing="10.0" styleClass="recommendations-section">
            <padding>
               <Insets top="20.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <Label styleClass="sidebar-header" text="For You">
                  <font>
                     <Font name="System Bold" size="16.0" />
                  </font>
               </Label>
               
               <Region HBox.hgrow="ALWAYS" />
               
               <Button fx:id="refreshRecommendationsBtn" styleClass="refresh-btn" text="🔄" />
            </HBox>
            
            <ScrollPane fitToWidth="true" maxHeight="300.0" styleClass="recommendations-scroll">
               <VBox fx:id="personalRecommendationsContainer" spacing="8.0" />
            </ScrollPane>
         </VBox>
         
         <Region VBox.vgrow="ALWAYS" />
      </VBox>
   </left>
   
   <center>
      <!-- Main Content Area -->
      <VBox styleClass="main-content">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <!-- Featured Tips Section (optional) -->
         <VBox fx:id="featuredTipsContainer" spacing="10.0" styleClass="featured-tips">
            <padding>
               <Insets bottom="20.0" />
            </padding>
            
            <Label styleClass="section-header" text="Featured Tips">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </VBox>
         
         <!-- Tips Display Area -->
         <VBox VBox.vgrow="ALWAYS">
            <!-- Tips Container -->
            <ScrollPane fx:id="tipsScrollPane" fitToWidth="true" styleClass="tips-scroll-pane" VBox.vgrow="ALWAYS">
               <VBox fx:id="tipsContainer" spacing="20.0" styleClass="tips-container">
                  <padding>
                     <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
            </ScrollPane>
            
            <!-- Pagination Controls -->
            <HBox alignment="CENTER" spacing="20.0" styleClass="pagination-section">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
               </padding>
               
               <Button fx:id="prevPageBtn" styleClass="pagination-btn" text="← Previous" />
               
               <Label fx:id="pageLabel" styleClass="page-label" text="1 / 1">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               
               <Button fx:id="nextPageBtn" styleClass="pagination-btn" text="Next →" />
               
               <Separator orientation="VERTICAL" />
               
               <Label styleClass="items-per-page-label" text="Items per page:" />
               <ComboBox fx:id="itemsPerPageComboBox" prefWidth="80.0" />
            </HBox>
         </VBox>
      </VBox>
   </center>
   
   <!-- Optional: Right sidebar for additional features -->
   <right>
      <VBox prefWidth="200.0" styleClass="right-sidebar" visible="false">
         <padding>
            <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
         </padding>
         
         <!-- Additional features can be added here -->
         <Label styleClass="sidebar-header" text="Quick Actions">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         
         <VBox spacing="10.0">
            <Button styleClass="quick-action-btn" text="📝 Submit Tip" />
            <Button styleClass="quick-action-btn" text="📊 View Analytics" />
            <Button styleClass="quick-action-btn" text="🏆 Achievements" />
         </VBox>
      </VBox>
   </right>
</BorderPane>