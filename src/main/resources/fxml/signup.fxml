<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.ecohabit.controller.SignupController">
   
   <!-- Main Content Area -->
   <center>
      <ScrollPane fitToWidth="true" styleClass="signup-scroll-pane">
         <HBox alignment="CENTER" styleClass="signup-main-container">
            
            <!-- Left side - Branding/Info Panel -->
            <VBox alignment="CENTER" prefWidth="400.0" styleClass="signup-branding-panel">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               
               <!-- App Logo/Icon -->
               <VBox alignment="CENTER" spacing="20.0">
                  <Label styleClass="app-logo" text="🌱">
                     <font>
                        <Font size="64.0" />
                     </font>
                  </Label>
                  
                  <Label styleClass="app-name" text="EcoHabit">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  
                  <Label styleClass="app-tagline" text="Start your sustainable journey today" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </VBox>
               
               <Region VBox.vgrow="SOMETIMES" />
               
               <!-- Benefits List -->
               <VBox alignment="CENTER_LEFT" spacing="15.0" styleClass="benefits-list">
                  <Label styleClass="benefits-title" text="Why join EcoHabit?" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="12.0">
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="benefit-icon" text="📊" />
                        <Label styleClass="benefit-text" text="Track your environmental impact" wrapText="true" />
                     </HBox>
                     
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="benefit-icon" text="🏆" />
                        <Label styleClass="benefit-text" text="Earn rewards for eco-friendly actions" wrapText="true" />
                     </HBox>
                     
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="benefit-icon" text="🌍" />
                        <Label styleClass="benefit-text" text="Join a community of eco-warriors" wrapText="true" />
                     </HBox>
                     
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="benefit-icon" text="💡" />
                        <Label styleClass="benefit-text" text="Get personalized eco-tips" wrapText="true" />
                     </HBox>
                  </VBox>
               </VBox>
               
               <Region VBox.vgrow="SOMETIMES" />
            </VBox>
            
            <!-- Right side - Signup Form -->
            <VBox alignment="TOP_CENTER" prefWidth="500.0" styleClass="signup-form-panel">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               
               <!-- Signup Form Container -->
               <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0" styleClass="signup-form-container">
                  
                  <!-- Header -->
                  <VBox alignment="CENTER" spacing="8.0">
                     <Label styleClass="form-title" text="Create Account">
                        <font>
                           <Font name="System Bold" size="28.0" />
                        </font>
                     </Label>
                     
                     <Label styleClass="form-subtitle" text="Join thousands of eco-conscious individuals">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                  </VBox>
                  
                  <!-- Status Message Container -->
                  <VBox fx:id="statusContainer" alignment="CENTER" managed="false" styleClass="status-container" visible="false">
                     <padding>
                        <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                     </padding>
                     
                     <Label fx:id="statusMessage" styleClass="status-message" textAlignment="CENTER" wrapText="true">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                  </VBox>
                  
                  <!-- Form Fields Grid -->
                  <VBox spacing="18.0" styleClass="form-fields">
                     
                     <!-- Personal Information Section -->
                     <VBox spacing="15.0" styleClass="form-section">
                        <Label styleClass="section-title" text="Personal Information">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <!-- Full Name -->
                        <VBox spacing="6.0" styleClass="form-field">
                           <Label styleClass="field-label" text="Full Name">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font>
                           </Label>
                           <TextField fx:id="nameField" promptText="Enter your full name" styleClass="form-input">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                           <Label fx:id="nameErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </VBox>
                        
                        <!-- Email -->
                        <VBox spacing="6.0" styleClass="form-field">
                           <Label styleClass="field-label" text="Email Address *">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font>
                           </Label>
                           <TextField fx:id="emailField" promptText="Enter your email address" styleClass="form-input">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </TextField>
                           <Label fx:id="emailErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </VBox>
                        
                        <!-- Age and Gender Row -->
                        <HBox spacing="15.0">
                           <VBox spacing="6.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                              <Label styleClass="field-label" text="Age">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="ageField" promptText="Age" styleClass="form-input">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Label fx:id="ageErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </VBox>
                           
                           <VBox spacing="6.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                              <Label styleClass="field-label" text="Gender">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="genderComboBox" maxWidth="Infinity" promptText="Select gender" styleClass="form-combo" />
                              <Label fx:id="genderErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </VBox>
                        </HBox>
                     </VBox>
                     
                     <!-- Account Security Section -->
                     <VBox spacing="15.0" styleClass="form-section">
                        <Label styleClass="section-title" text="Account Security">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <!-- Password -->
                        <VBox spacing="6.0" styleClass="form-field">
                           <Label styleClass="field-label" text="Password *">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font>
                           </Label>
                           <PasswordField fx:id="passwordField" promptText="Create a password (min. 8 characters)" styleClass="form-input">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </PasswordField>
                           <Label fx:id="passwordErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </VBox>
                        
                        <!-- Confirm Password -->
                        <VBox spacing="6.0" styleClass="form-field">
                           <Label styleClass="field-label" text="Confirm Password *">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font>
                           </Label>
                           <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="form-input">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </PasswordField>
                           <Label fx:id="confirmPasswordErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </VBox>
                     </VBox>
                     
                     <!-- Lifestyle Preferences Section -->
                     <VBox spacing="15.0" styleClass="form-section">
                        <Label styleClass="section-title" text="Lifestyle Preferences">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <Label styleClass="section-subtitle" text="Help us personalize your experience" wrapText="true">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        
                        <!-- Diet and Transport Row -->
                        <HBox spacing="15.0">
                           <VBox spacing="6.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                              <Label styleClass="field-label" text="Diet Type">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="dietComboBox" maxWidth="Infinity" promptText="Select diet type" styleClass="form-combo" />
                              <Label fx:id="dietErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </VBox>
                           
                           <VBox spacing="6.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                              <Label styleClass="field-label" text="Transport">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="transportComboBox" maxWidth="Infinity" promptText="Primary transport" styleClass="form-combo" />
                              <Label fx:id="transportErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </VBox>
                        </HBox>
                        
                        <!-- User Type -->
                        <VBox spacing="6.0" styleClass="form-field">
                           <Label styleClass="field-label" text="User Type">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font>
                           </Label>
                           <ComboBox fx:id="userTypeComboBox" maxWidth="Infinity" promptText="How would you describe yourself?" styleClass="form-combo" />
                           <Label fx:id="userTypeErrorLabel" styleClass="error-text" text="" visible="false" managed="false">
                              <font>
                                 <Font size="11.0" />
                              </font>
                           </Label>
                        </VBox>
                     </VBox>
                  </VBox>
                  
                  <!-- Action Buttons -->
                  <VBox spacing="15.0" styleClass="signup-actions">
                     <!-- Primary Signup Button -->
                     <Button fx:id="signupButton" maxWidth="Infinity" styleClass="signup-btn-primary" text="Create Account">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                     
                     <!-- Divider -->
                     <VBox alignment="CENTER" spacing="12.0" styleClass="divider-section">
                        <Separator prefWidth="200.0" />
                        <Label styleClass="divider-text" text="or sign up with">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </VBox>
                     
                     <!-- Google Signup -->
                     <Button fx:id="googleSignupButton" maxWidth="Infinity" styleClass="google-signup-btn" text="🔍 Continue with Google">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </VBox>
                  
                  <!-- Login Link -->
                  <HBox alignment="CENTER" spacing="5.0" styleClass="login-section">
                     <Label styleClass="login-prompt" text="Already have an account?">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                     
                     <Hyperlink fx:id="loginLink" styleClass="login-link" text="Sign In">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Hyperlink>
                  </HBox>
                  
                  <!-- Terms and Privacy -->
                  <VBox alignment="CENTER" spacing="8.0" styleClass="terms-section">
                     <Label styleClass="terms-text" text="By creating an account, you agree to our" textAlignment="CENTER">
                        <font>
                           <Font size="11.0" />
                        </font>
                     </Label>
                     
                     <HBox alignment="CENTER" spacing="5.0">
                        <Hyperlink styleClass="terms-link" text="Terms of Service">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Hyperlink>
                        
                        <Label styleClass="terms-separator" text="and">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                        
                        <Hyperlink styleClass="terms-link" text="Privacy Policy">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Hyperlink>
                     </HBox>
                  </VBox>
               </VBox>
            </VBox>
         </HBox>
      </ScrollPane>
   </center>
   
   <!-- Optional: Top navigation bar -->
   <top>
      <HBox alignment="CENTER_RIGHT" styleClass="signup-top-bar" visible="false" managed="false">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <Label styleClass="top-bar-text" text="Need assistance?" />
            <Hyperlink styleClass="help-link" text="Contact Support" />
         </HBox>
      </HBox>
   </top>
   
   <!-- Optional: Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" styleClass="signup-bottom-bar" visible="false" managed="false">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         
         <Label styleClass="footer-text" text="© 2025 EcoHabit. All rights reserved.">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
      </HBox>
   </bottom>
</BorderPane>